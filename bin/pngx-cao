#!/usr/bin/env python3
"""
Simple shim script to invoke pngx-cao CLI.

This allows running the tool as ./bin/pngx-cao without installation.
Requires the package to be installed via 'pip install -e .'
"""

if __name__ == '__main__':
    try:
        from pngx_cao.cli import main
        main()
    except ImportError as e:
        import sys
        print("Error: pngx-cao is not installed.", file=sys.stderr)
        print("Please run: pip install -e .", file=sys.stderr)
        print(f"Details: {e}", file=sys.stderr)
        sys.exit(1)
